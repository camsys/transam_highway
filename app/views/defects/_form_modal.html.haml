.modal-dialog.modal-lg
  .modal-content
    .modal-header
      %button.close{:data => {:dismiss => "modal"}}
        x
      %h3.modal-title
        = @defect.new_record? ? 'Add Defect' : 'Edit Defect'
    .modal-body
      = render(:partial => 'shared/form_errors', :locals => {:obj => @defect}) unless @defect.errors.empty?

      = render "defects/form"