.modal-dialog.modal-lg
  .modal-content
    .modal-header
      %button.close{:data => {:dismiss => "modal"}}
        x
      %h3.modal-title
        = @streambed_profile.new_record? ? 'New Profile' : 'Edit Profile'
    .modal-body
      = render(:partial => 'shared/form_errors', :locals => {:obj => @streambed_profile}) unless @streambed_profile.errors.empty?

      = render "streambed_profiles/form"