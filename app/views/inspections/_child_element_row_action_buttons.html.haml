:ruby 
  parent_element = element.parent
.dropdown
  %button.btn.btn-sm.dropdown-toggle.element_defect_row_action_button{:data => {:toggle => 'dropdown'}}
    .fa.fa-ellipsis-h
  %ul.dropdown-menu.dropdown-menu-right{:role => 'menu'}
    %li.text-left
      = link_to edit_inspection_element_child_element_path(parent_element.inspection, parent_element, element), remote: true do
        = "Edit Protective System"
    %li.text-left
      = link_to new_inspection_element_defect_path(parent_element.inspection, element), remote: true do
        = "Add Defect"
    - if can? :create, element.images.build
      %li.text-left
        = link_to new_inspection_element_image_path(parent_element.inspection, element, form_view: 'elements/photo_form'), :remote => true do
          Add Photo
    %li.text-left
      = link_to edit_comment_inspection_element_path(parent_element.inspection, element), remote: true do
        = "Edit Comment"
    %li.text-left
      = link_to inspection_element_child_element_path(parent_element.inspection, parent_element, element), method: :delete, data: { confirm: 'Are you sure?' }  do
        = "Delete"