.row
  .col-md-2
    .panel.panel-default.header-part
      .panel-heading
        .row
          .col-md-6
            %h3.panel-title
              %i.fa.fa-list
              Summary
          .col-md-6
            = render 'actions'
      .panel-body
        = render :partial => 'summary'

  .col-md-10
    .panel.panel-default.header-part
      .panel-heading
        .row
          .col-md-12
            %h3.panel-title
              %i.fa.fa-folder-open
              Details
              = render partial: 'shared/xeditable_edit_actions', locals: {obj: @inspection, allowed_to_edit: ((can? :update, @inspection.inspection) && @inspection.updatable?)}

      .panel-body
        = render 'details'

= render 'scripts'
