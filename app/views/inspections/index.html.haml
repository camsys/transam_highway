#subheader-label
  %h2 Inspection Manager
  %legend.asset-subheader
.row
  .col-sm-12
    = render 'inspections/search_form'

  .col-sm-12
    - if ['open', 'ready'].include? @search_proxy.single_state_selected || (@search_proxy.single_state_selected == 'assigned' && @search_proxy.assigned_organization_id.to_i > 0)
      = render partial: 'inspections/assignments_form_panel', :locals => {filter_scripts_loaded: 1, state: @search_proxy.single_state_selected, assigned_organization_id: @search_proxy.assigned_organization_id}
  
  .col-sm-12
    #spinner{:style => 'padding: 20px;'}
      = loader_panel_tag({:message => "Searching...", :size => 3, :spinner => "refresh"})

    #errors

    #inspection-table-container
      = render 'inspections/inspections_table'


= render 'inspection_filter_scripts'

:javascript

  $(window).resize(function() {
    $('#inspections-table').bootstrapTable('resetView');
  });
