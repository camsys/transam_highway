- indent_str = '&nbsp;'*indent*4
%tr.defect{data: {defect_id: defect.id, element_id: defect.element.id}}
  %td.left!= "#{indent_str}#{html_rjust(defect.defect_definition.number, 4)}"
  %td.left!= "#{indent_str}#{defect.defect_definition.short_name}#{' (' + defect.guid + ')' if @show_debug}"
  %td.right.total_quantity= format_as_integer(defect.defect_locations.sum(&:quantity))
  %td.left= defect.element.element_definition.quantity_unit
  %td.right.cs1
    = link_to defect_location_new_or_edit_path(defect, 'CS1'), remote: true, class: "btn btn-outline-info" do
      %button.number-display.btn
        = format_as_integer(defect.defect_locations.find_by(condition_state: 'CS1')&.quantity || 0)
  %td.right.cs2
    = link_to defect_location_new_or_edit_path(defect, 'CS2'), :remote => true do
      %button.number-display.btn
        = format_as_integer(defect.defect_locations.find_by(condition_state: 'CS2')&.quantity || 0)
  %td.right.cs3
    = link_to defect_location_new_or_edit_path(defect, 'CS3'), :remote => true do
      %button.number-display.btn
        = format_as_integer(defect.defect_locations.find_by(condition_state: 'CS3')&.quantity || 0)
  %td.right.cs4
    = link_to defect_location_new_or_edit_path(defect, 'CS4'), :remote => true do
      %button.number-display.btn
        = format_as_integer(defect.defect_locations.find_by(condition_state: 'CS4')&.quantity || 0)
  %td.center
    - if can?(:update, @inspection.inspection) && @inspection.updatable?
      = render 'inspections/defect_row_action_buttons', defect: defect
- if defect.defect_locations.any? || defect.notes.present?
  - notes = defect.defect_locations.order(:condition_state).collect {|s| "#{indent_str}#{s}"}.join("<br/>")
  - notes = defect.notes unless notes.present?
  %tr.notes
    %td
    %td.left{colspan: 7}!= notes
