.modal-dialog.modal-lg
  .modal-content
    .modal-header
      %button.close{:data => {:dismiss => "modal"}}
        x
      %h3.modal-title
        = @streambed_profile_point.new_record? ? 'New Distance' : 'Edit Distance'
    .modal-body
      = render(:partial => 'shared/form_errors', :locals => {:obj => @streambed_profile_point}) unless @streambed_profile_point.errors.empty?

      = render "streambed_profile_points/form"