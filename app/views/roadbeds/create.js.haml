- if @roadbed.errors.any?
  $('#form-modal').html("#{escape_javascript(render 'roadbeds/form_modal')}");
- else
  $('#form-modal').modal('hide');

  if($('#roadway_id').val() && $('#roadway_id').val() != "#{@roadbed.roadway.object_key}") {
  $('#roadway_id').val("#{@roadbed.roadway.object_key}");
  }
  
  $('#roadbeds-table').replaceWith("#{escape_javascript(render 'roadbeds/roadbeds_table', roadbeds: @roadbeds, inspection: @inspection)}");
  $('#roadbed_id').replaceWith("#{escape_javascript(render 'roadbeds/roadbed_dropdown', roadbeds: @roadbeds, selected: @roadbed)}");
  $('#roadbed-lines-table').replaceWith("#{escape_javascript(render 'roadbed_lines/roadbed_lines_table', roadbed: @roadbed)}");
